{% extends 'base.html.twig' %}

{% block body %}

<div class="container">

    <h1>Modification du produit</h1>
    <form class="form-horizontal" action="{{ path('produit_edit', { 'id': produit.id }) }}" method="POST">
    
        <div class="form-group">
          <span class="form-group-addon">Libellé</span>
          <input type="text" class="form-control" id="produit_titre" name="produit[titre]" placeholder="Libellé" style="max-height : 200px" value="{{ produit.titre }}" />
        </div>
        
        <div class="form-group">
          <span class="form-group-addon">Libellé</span>
          <textarea  class="form-control" id="foproduit_scription" name="produit[description]" placeholder="Description" style="max-height : 200px">{{ produit.description }}</textarea>
        </div>
        
        <div class="form-group">
          <span class="form-group-addon">Prix</span>
          <input type="text" class="form-control" id="produit_prix" name="produit[prix]" placeholder="Prix" style="max-height : 200px" value="{{ produit.prix }}" />
        </div>
        
        <div class="form-group">
          <span class="form-group-addon">Couleur</span>
          <input type="text" class="form-control" id="produit_couleur" name="produit[couleur]" placeholder="Couleur" style="max-height : 200px" value="{{ produit.couleur }}" />
        </div>
        
        <div class="form-group">
          <span class="form-group-addon">Quantité</span>
          <input type="number" class="form-control" id="produit_quantite" name="produit[quantite]" placeholder="Quantité" style="max-height : 200px" value="{{ produit.quantite }}" />
        </div>
        
    	<a class="btn btn-primary" href="{{ path('produit_index') }}"><span class="glyphicon glyphicon-menu-left"></span>Retourner à la liste</a>
	    <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-floppy-saved"></i> Modifier</button>
	     
		{{ form_row(edit_form._token) }}
    </form>
</div>
{% endblock %}
